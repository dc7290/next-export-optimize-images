    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.9",
    "next": "14.2.7",
    "npm-run-all2": "^6.2.2",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "5.0.10",
    "semantic-release": "19.0.5",
    "ts-jest": "29.2.5",
    "tsup": "^8.2.4",
    "typescript": "5.5.4",
    "webpack": "5.94.0"
