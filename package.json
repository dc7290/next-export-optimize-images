  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/index.js",
  "files": [
    "dist",
    "legacy",
    "image.js",
    "image.d.ts",
    "picture.js",
    "picture.d.ts",
    "remote-image.js",
    "remote-image.d.ts",
    "remote-picture.js",
    "remote-picture.d.ts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "commitmsg": "commitlint -e $GIT_PARAMS",
